# Example environment for PigWeight FastAPI
# Copy this file to ".env" and adjust values

# Detection mode: pig-only or balanced
DETECTION_MODE=pig-only

# Model path for pig detection
PIG_MODEL_PATH=models/pig_yolo11-seg.pt

# RTSP URL (store credentials here, not in code)
CAM_URL=rtsp://user:password@10.0.0.1/stream/1

# Optional fallback if CAM_URL is not set
CAM_DEFAULT=rtsp://user:password@10.0.0.1/stream/1

# MJPEG streaming parameters
FPS=12
JPEG_QUALITY=80

# Balanced mode parameters (only used when DETECTION_MODE=balanced)
BALANCED_THRESHOLD=75
BALANCED_MIN_WEIGHT=60
BALANCED_MAX_WEIGHT=120

DEBUG="true"